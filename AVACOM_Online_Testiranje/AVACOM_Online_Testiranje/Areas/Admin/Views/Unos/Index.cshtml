
@{
    ViewBag.Title = "Index";
}

@using AVACOM_Online_Testiranje.Areas.Admin.Models
@model PitanjePrikaziVM

<form>
    <div class="form-inline">
        @Html.DropDownListFor(model => model.OblastId, Model.oblastiStavke, new { @class = "form-control" })
        <input type="submit" value="Filtiraj" class="btn btn-default" />
    </div>
</form>




<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tekst</th>
            <th>Bod</th>
            <th>Oblast</th>
            <th>Vrsta pitanja</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (PitanjePrikaziVM.PitanjeInfo x in Model.Pitanja)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Tekst</td>
                <td>@x.Bod</td>
                <td>@x.Oblst_Naziv</td>
                <td>@x.VrtaPitanja_Naziv</td>
                <td>
                    @Html.ActionLink("Obriši", "Obrisi", new { pitanjeId = x.Id }, new { @class = "btn btn-danger btn-sm" })
                    @Html.ActionLink("Uredi", "Uredi", new { pitanjeId = x.Id }, new { @class = "btn btn-info btn-sm" })
                </td>

            </tr>

        }

    </tbody>
</table>

<div>
    @Html.ActionLink("Dodaj novi", "Dodaj", new { }, new { @class = "btn btn-success btn-sm" })
</div>

