<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/full-slider.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" />

</head>
<body>
    @*izgled-user*@
    @using AVACOM_Online_Testiranje.Helper
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AVACOM", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li><a href="/User/Home/Testovi">Test</a></li>

                </ul>

                <ul class="nav navbar-nav pull-right">
                   
                    
                   <li style="color:white;margin-top:15px"> @LogiraniKorisnik.Ime
                    @LogiraniKorisnik.Prezime</li>
                 
                    <li><a href="/Home/Index">Odjava</a></li>

                </ul>
            </div>
            

        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>
    <hr />
    <div id="footer">
        <div class="container">
            <div class="inner">

                <p><br />Avacom-team, 2015</p>


            </div>
        </div>

    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


        <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

</body>
</html>